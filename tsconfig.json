{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "declaration": true,
    "rootDir": "src",
    "outDir": "lib",
    "declarationDir": "lib/types",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "path-webpack": ["node_modules/path-webpack"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "pkg", "test", "**/*.spec.ts"]
}
