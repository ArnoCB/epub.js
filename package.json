{
  "name": "epubjs",
  "version": "0.3.93",
  "description": "Parse and Render Epubs",
  "main": "dist/epub.js",
  "module": "dist/epub.js",
  "types": "types/index.d.ts",
  "repository": "https://github.com/ArnoCB/epub.js",
  "scripts": {
    "build:utils": "tsc -p tsconfig.json",
    "build:rollup": "npm run build:lib && rollup -c",
    "build:lib": "rimraf lib && tsc -p tsconfig.build.json",
    "test": "jest --runInBand && npm run test:e2e",
    "test:jest": "jest --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "compile": "babel -d lib/ src/",
    "docs": "documentation build src/index.ts -f html -o documentation/html/",
    "docs:html": "documentation build src/index.ts -f html -o documentation/html/",
    "docs:md": "documentation build src/index.ts -f md -o documentation/md/API.md",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "precommit": "npm run lint && npm run format && npm run build:utils && npm run test && npm run build:rollup",
    "start": "webpack-dev-server --inline --d",
    "build": "NODE_ENV=production webpack --progress",
    "minify": "NODE_ENV=production MINIMIZE=true webpack --progress",
    "watch": "babel --watch -d lib/ src/",
    "dev:prepare": "npm run compile && npm run build && npm run minify",
    "prepare": "husky install"
  },
  "author": "fchasen@gmail.com",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@babel/cli": "^7.24.4",
    "@babel/core": "^7.24.4",
    "@babel/plugin-proposal-export-default-from": "^7.24.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@babel/preset-env": "^7.24.4",
    "@babel/runtime": "^7.24.4",
    "@eslint/js": "^9.29.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/jest": "^30.0.0",
    "@xmldom/xmldom": "^0.9.8",
    "assert": "^2.1.0",
    "babel-loader": "^9.1.3",
    "documentation": "^14.0.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.2.0",
    "husky": "^8.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.6.0",
    "process": "^0.11.10",
    "raw-loader": "^4.0.2",
    "rollup": "^2.79.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.4.0",
    "typescript-eslint": "^8.35.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^6.1.1",
    "webpack-dev-server": "^5.0.4",
    "cpx": "^1.5.0",
    "rimraf": "^5.0.0",
    "http-server": "^14.1.1",
    "@playwright/test": "^1.36.0"
  },
  "dependencies": {
    "core-js": "^3.18.3",
    "event-emitter": "^0.3.5",
    "jszip": "^3.7.1",
    "localforage": "^1.10.0",
    "marks-pane": "github:ArnoCB/marks-pane",
    "path-webpack": "^0.0.3"
  }
}
