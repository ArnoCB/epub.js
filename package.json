{
  "name": "epubjs",
  "version": "0.3.93",
  "description": "Parse and Render Epubs",
  "main": "dist/epub.js",
  "module": "src/index.js",
  "types": "types/index.d.ts",
  "type": "module",
  "repository": "https://github.com/ArnoCB/epub.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "karma start --single-run --browsers ChromeHeadlessNoSandbox",
    "docs": "documentation build src/epub.js -f html -o documentation/html/",
    "docs:html": "documentation build src/epub.js -f html -o documentation/html/",
    "docs:md": "documentation build src/epub.js -f md -o documentation/md/API.md",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "precommit": "npm run lint && npm run format && npm test && npm run build",
    "start": "webpack-dev-server --inline --d",
    "build": "NODE_ENV=production webpack --progress",
    "minify": "NODE_ENV=production MINIMIZE=true webpack --progress",
    "legacy": "NODE_ENV=production LEGACY=true webpack --progress",
    "productionLegacy": "NODE_ENV=production MINIMIZE=true LEGACY=true webpack --progress",
    "compile": "babel -d lib/ src/",
    "watch": "babel --watch -d lib/ src/",
    "dev:prepare": "npm run compile && npm run build && npm run minify && npm run legacy && npm run productionLegacy",
    "prepare": "husky install"
  },
  "author": "fchasen@gmail.com",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@babel/cli": "^7.24.4",
    "@babel/core": "^7.24.4",
    "@babel/plugin-proposal-export-default-from": "^7.24.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@babel/preset-env": "^7.24.4",
    "@babel/runtime": "^7.24.4",
    "@eslint/js": "^9.29.0",
    "assert": "^2.1.0",
    "babel-loader": "^9.1.3",
    "documentation": "^14.0.2",
    "eslint": "^8.57.1",
    "globals": "^16.2.0",
    "husky": "^8.0.0",
    "jest": "^30.0.4",
    "jsdoc": "^3.6.3",
    "jsdom": "^26.1.0",
    "karma": "^6.4.3",
    "karma-chrome-launcher": "^3.2.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^5.0.0",
    "mocha": "^10.4.0",
    "prettier": "^3.6.0",
    "process": "^0.11.10",
    "raw-loader": "^4.0.2",
    "terser-webpack-plugin": "^5.3.10",
    "tsd-jsdoc": "^2.5.0",
    "typescript-eslint": "^8.35.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^6.1.1",
    "webpack-dev-server": "^5.0.4",
    "xmldom": "^0.6.0"
  },
  "dependencies": {
    "@types/localforage": "0.0.34",
    "@xmldom/xmldom": "^0.7.5",
    "core-js": "^3.18.3",
    "event-emitter": "^0.3.5",
    "jszip": "^3.7.1",
    "localforage": "^1.10.0",
    "marks-pane": "^1.0.9",
    "path-webpack": "0.0.3"
  }
}
